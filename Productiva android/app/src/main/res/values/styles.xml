<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos adicionales comunes sin duplicados -->
    
    <style name="Widget.Productiva.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/colorSurface</item>
    </style>
    
    <style name="Widget.Productiva.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
    </style>
    
    <style name="Widget.Productiva.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/colorPrimary</item>
        <item name="itemTextColor">@color/colorPrimary</item>
    </style>
    
    <style name="TextAppearance.Productiva.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="TextAppearance.Productiva.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Estilo de texto para App.Subtitle -->
    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>