<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Productiva" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="materialDividerColor">@color/colorDivider</item>
    </style>

    <style name="Theme.Productiva.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Productiva.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Productiva.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Widget.Productiva.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>
    
    <style name="Widget.Productiva.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorAccent</item>
    </style>
    
    <style name="Widget.Productiva.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    
    <style name="Widget.Productiva.TextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
    </style>
    
    <!-- DefiniciÃ³n de AppTheme para compatibilidad -->
    <style name="AppTheme" parent="Theme.Productiva">
        <!-- Este tema hereda todas las propiedades de Theme.Productiva -->
    </style>
    
    <style name="AppTheme.NoActionBar" parent="Theme.Productiva.NoActionBar">
        <!-- Este tema hereda todas las propiedades de Theme.Productiva.NoActionBar -->
    </style>
    
    <style name="AppTheme.AppBarOverlay" parent="Theme.Productiva.AppBarOverlay" />
    
    <style name="AppTheme.PopupOverlay" parent="Theme.Productiva.PopupOverlay" />
</resources>